{
    "appBundleId": "com.markotron.myapp",
    "name": "markotron",
    "productName": "Markotron - Electron Boilerplate",
    "version": "2.0.0",
    "description": "Electron Boilerplate with Marko & Webpack",
    "main": "dist/main.js",
    "scripts": {
        "start": "cross-env NODE_ENV=production electron .",
        "build": "cross-env NODE_ENV=production webpack --progress",
        "dev": "cross-env NODE_ENV=development webpack --progress && cross-env NODE_ENV=development node build/dev.js",
        "test": "jest",
        "package-mac": "npm run build && cross-env NODE_ENV=production PACKAGE_PLATFORM=darwin PACKAGE_ARCH=all node build/package.js",
        "package-linux": "npm run build && cross-env NODE_ENV=production PACKAGE_PLATFORM=linux PACKAGE_ARCH=all node build/package.js",
        "package-windows": "npm run build && cross-env NODE_ENV=production PACKAGE_PLATFORM=win32 PACKAGE_ARCH=all node build/package.js",
        "package-mac1": "npm run build && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=$npm_package_build_icon_mac --prune=true --out=release",
        "package-linux1": "npm run build && electron-packager . $npm_package_name --overwrite --asar=true --platform=linux --arch=x64 --icon=$npm_package_build_icon_linux --prune=true --out=release",
        "package-windows1": "npm run build && electron-packager . $npm_package_name --overwrite --asar=true --platform=win32 --arch=ia32 --icon=$npm_package_build_icon_windows --prune=true --out=release --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=$npm_package_productName",
        "release": "npm run package-mac && npm run package-linux && npm run package-windows"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Teddy95/markotron.git"
    },
    "author": "Andre Sieverding",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Teddy95/markotron/issues"
    },
    "homepage": "https://github.com/Teddy95/markotron#readme",
    "build": {
        "icon": {
            "mac": "resources/icons/icon.icns",
            "windows": "resources/icons/icon.ico",
            "linux": "resources/icons/icon.png"
        }
    },
    "devDependencies": {
        "@marko/webpack": "^2.0.0",
        "css-loader": "^3.4.2",
        "devtron": "^1.4.0",
        "electron": "^7.1.11",
        "electron-packager": "^14.2.0",
        "electron-reload": "^1.5.0",
        "file-loader": "^5.0.2",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^25.1.0",
        "marko": "^4.18.35",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.1",
        "nodemon": "^2.0.2",
        "sass-loader": "^8.0.2",
        "svg-url-loader": "^3.0.3",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.10.1",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.12.0",
        "cross-env": "^6.0.3"
    }
}
